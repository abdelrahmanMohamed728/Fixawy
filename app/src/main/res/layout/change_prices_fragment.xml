<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.change_prices.ChangePricesFragment">

    <ProgressBar
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/changePricesProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ProgressBar>

    <Spinner
        android:id="@+id/pricesSpinner"
        android:layout_marginTop="20dp"
        style="@style/SignUpSpinner"
        android:layout_width="match_parent"
        android:layout_height="40dp">
    </Spinner>

    <EditText
        android:id="@+id/priceEditText"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="number"
        style="@style/SubTitleProfileEditText"
        android:layout_marginTop="20dp">
    </EditText>

    <Button
        android:id="@+id/updatePriceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/edit_profile"
        android:backgroundTint="@color/colorAccent">
    </Button>

</LinearLayout>