<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    tools:context=".home.reserve.ReserveFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fixer_rounded_background"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:src="@drawable/fixer_test">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/fixer_name"
                style="@style/CardTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ahmed Mohamed"
                android:textColor="@color/colorAccent"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/fixer_job"
                style="@style/CardSubTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Fixer"
                android:textColor="@color/white">
            </TextView>
        </LinearLayout>

        <Spinner
            android:id="@+id/FixerJobSpinner"
            style="@style/SignUpSpinner"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        </Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            style="@style/TitleTextView"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="right"
            android:text="اختر التاريخ المناسب لك">
        </TextView>

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp">
        </DatePicker>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            style="@style/TitleTextView"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:text="اختر الوقت المناسب لك">
        </TextView>

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_marginVertical="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TimePicker>

        <TextView
            android:id="@+id/priceTextView"
            android:textStyle="bold"
            style="@style/CardSubTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center">
        </TextView>

        <ProgressBar
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:id="@+id/reserveProgressBar"
            android:layout_gravity="center">
        </ProgressBar>

        <Button
            android:id="@+id/reserveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/reserve">
        </Button>


    </LinearLayout>
</ScrollView>